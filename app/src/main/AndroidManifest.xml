<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.social.makefriends">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".utils.EmojiAppication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher_app_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/MakeFriends"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.activity.userpost.PlayPostVideo"
            android:exported="true"
            android:theme="@style/ImageTheme"/>
        <activity android:name=".ui.activity.account.OTPVerification" />
        <activity android:name=".ui.activity.account.LoginWithPhone" />
        <activity android:name=".ui.activity.account.ChangePassword" />
        <activity android:name=".ui.activity.userpost.PostLikedUsers" />
        <activity android:name=".ui.activity.userpost.PostDislikedUsers" />
        <activity android:name=".ui.activity.userpost.FavouritePost" />
        <activity android:name=".ui.activity.seetings.SettingsActivity" />
        <activity android:name=".ui.activity.chat.ShareMessages" />
        <activity android:name=".ui.activity.chat.wallpaper.DarkWallpaper" />
        <activity android:name=".ui.activity.chat.wallpaper.LightWallpaper" />
        <activity android:name=".ui.activity.chat.wallpaper.SelectWallpaper" />
        <activity
            android:name=".ui.activity.chat.ViewWallpaper"
            android:theme="@style/ChangeTheme" />
        <activity
            android:name=".ui.activity.chat.ViewMessageImages"
            android:theme="@style/ChangeTheme" />
        <activity
            android:name=".ui.activity.userprofile.ViewProfileImage"
            android:theme="@style/ImageTheme" />
        <activity
            android:name=".ui.activity.chat.ChatWithFriends"
            android:theme="@style/NoActionBar" />
        <activity android:name=".ui.activity.chat.friendrequest.SendFriendRequestDuplicate" />
        <activity android:name=".utils.TabLayoutView" />
        <activity android:name=".ui.activity.chat.friendrequest.SendFriendRequest" />
        <activity android:name=".ui.activity.userpost.ViewPost" />
        <activity android:name=".ui.activity.home.SearchFriends" />
        <activity android:name=".ui.activity.userpost.UserPostComment" />
        <activity android:name=".ui.activity.userpost.UpdatePost" />
        <activity android:name=".ui.activity.userprofile.UpdateProfile" />
        <activity android:name=".ui.activity.userpost.Post" />
        <activity android:name=".ui.activity.userprofile.UserProfile" />
        <activity android:name=".ui.activity.notification.Notifications" />
        <activity android:name=".ui.activity.chat.Chats" />
        <activity android:name=".ui.activity.home.Home" />
        <activity android:name=".ui.activity.account.ResetPassword" />
        <activity android:name=".ui.activity.account.SignUp" />
        <activity android:name=".ui.activity.account.Login" /> <!-- For Image Editor -->
        <activity android:name="com.dsphotoeditor.sdk.activity.DsPhotoEditorActivity" />
        <activity android:name="com.dsphotoeditor.sdk.activity.DsPhotoEditorStickerActivity" />
        <activity
            android:name="com.dsphotoeditor.sdk.activity.DsPhotoEditorTextActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name="com.dsphotoeditor.sdk.activity.DsPhotoEditorCropActivity" />
        <activity android:name="com.dsphotoeditor.sdk.activity.DsPhotoEditorDrawActivity" /> <!-- Facebook login -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity> <!-- Firebase Messaging -->
        <service
            android:name=".notification.MyFirebaseMessaging"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".ui.activity.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>